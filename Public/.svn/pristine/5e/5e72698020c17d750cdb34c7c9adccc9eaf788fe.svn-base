/*
手机版首页样式
*/
img.icon.icon-ChatHead {
    width: 1.45rem;
    height: 1.45rem;
  }

  .item-content .success .badge {
    background: red;
    color:#FFFFFF;
  }

  .panel-left select option {
    color: #000;
  }
  .icon-home:before {
    content: "\e602";
  }
  .icon-star:before {
    content: "\e60e";
  }
nav ul{
margin: 0;
padding: 0;
 list-style:none; /* 去掉ul前面的符号 */
 width: auto;
}

/*未展开子菜单*/
.tab-item>div{
    position:relative;
    -webkit-box-sizing: border-box;
}
.tab-item>.new-tab{
  position: absolute;
    bottom: 2.5rem;
    z-index: -1;
    width: 100%;
    list-style: none;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    display: none;
   border-radius: 0.55rem;
    background: #f7f7f8;
}
.tab-item>ul li{
  float: none;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    line-height: 2rem;
    background: -webkit-gradient(linear, 0 0, 100% 0, from(rgba(194,194,194,0.8)), to(rgba(194,194,194,0.8)), color-stop(50%, rgba(194,194,194,0.8)));
    background-size: 80% 1px;
    background-repeat: no-repeat;
    background-position: center bottom;
    color: #929292;
}
.tab-item>.new-tab>.actives{
color:#0c0c0c;
}
.tab-item.active>.new-tab{
  display: block;
}
.tab-item.active>.new-tab.show{
  display: block;
}
.tab-item.active>.new-tab.hide{
  display: none;
}
#nav-float {
    position: fixed;
    right: .2rem;
    bottom: .2rem;
    width: 2.5rem;
    background: #fff;
    height: 1.4rem;
    z-index: 9999;
    border: 1px solid #dedede;
    border-radius: 1.25rem;
    -moz-border-radius: 1.25rem;
    -webkit-border-radius: 1.25rem;
    text-align: center;
}
#nav-overlady{
  position: absolute;
    top: 0;
    left: 0;
    z-index: 10000;
    width: 100%;
    height: 100%;
       visibility: visible;
    opacity: 1;
    background: rgba(0, 0, 0, .4);
    -webkit-transition-duration: 400ms;
    -o-transition-duration: 400ms;
    transition-duration: 400ms;
}
#nav-overlady.hide{
  display: none;
}
#nav-menu-list{
  display: none;
  position: fixed;
  height: auto;
  right: .25rem;
  width: 100%;
  z-index: 10001

}
#nav-menu-list ul{
  height: 100%
}
#nav-menu-list .level-1{
width: 100%;
}
#nav-menu-list .level-1 .nav-level-1-back{
  width: 100%;
  background: #cacaca;
  line-height: 1.2rem;
}
.nav-level-1-back::after{
  content: "\e611";
  position: absolute;
    right: .2rem;
    font-size: 1.3em;
  }
  .nav-level-1-back::after .nav-level-2{
    display: none;
  }
  .nav-level-1-back::before .nav-level-2{
    display: block;
    content: "\e612";
  }