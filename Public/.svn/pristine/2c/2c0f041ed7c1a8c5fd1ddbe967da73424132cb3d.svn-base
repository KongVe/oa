function menu_tree_list(data){
	var list = '';
	$.each(data,function(i,v){
		if(i == 0){
			list += '<dl class="layui-nav-child">'
		}
		if(v._child){debugger
			list += 
			'<dd data-name="'+v.id+'">'+
			'<a  id="'+v.id+'" data-pid="'+v.pid+'"  lay-tips="'+v.name+'">'+v.name+'<span class="layui-nav-more"></span></a>'+
			menu_tree_list(v._child)+
			'</dd>'

		}else{
			list += 
			'<dd data-name="'+v.id+'">'+
			'<a  id="'+v.id+'" data-pid="'+v.pid+'" lay-href="'+v.url+'" lay-tips="'+v.name+'">'+v.name+'</a>'+
			'</dd>'
		}
	})
	list+= '</dl>'
	return list;
}
