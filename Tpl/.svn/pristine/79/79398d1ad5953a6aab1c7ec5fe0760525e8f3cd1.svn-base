<script type="text/javascript">
	function checkTaskSave(result) {
		if(confirm('确认执行该操作？')){
			$("#ajax").val(1);
			$("#result").val(result);
			editor.sync();
			if (check_form("form_data")) {
				sendForm("form_data", "{:U('checkTaskSave')}",'',function(msg){
					alert(msg.info);
					if(msg.status){
						parent.location.reload();	
					}
				});
			}
		}
		
	}

	function changeTitle(obj){
		$('#title').val($(obj).val());
	}

	function changeFinalReward(obj){
		var score=$(obj).val();
		var rate=score/10;
		console.log(rate);
		var final_reward={$vo['reward']};
		var max_reward=rate * final_reward;
		console.log($("#final_reward").val());
		$('#final_reward').val(max_reward);

	}
</script>