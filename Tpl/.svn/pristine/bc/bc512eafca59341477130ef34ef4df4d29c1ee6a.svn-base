<script type="text/javascript">
$(function($){
	$("#add_uid").select2();
	$("#review_uid").select2();
	$("#last_warehouse_out_uid").select2();
	$("#close_uid").select2();

	$(".confirmWarehouseOut").click(function(){
		var id = $(this).data("id");
		if(!id){
			return false;
		}
		var quantity = $("#warehouse_out_quantity_"+id).val();

		if(!confirm("确认执行出库？该操作将无法撤销")){
			return false;
		}
		var btn = $(this);
		btn.button('loading');
		$.post("{:U('confirmWarehouseOut')}",{id:id,quantity:quantity},function(msg){
			btn.button('reset');
			if(msg.status){
				alertWarning(msg.info,1);
				window.location.reload();
			}else{
				alertWarning(msg.info);
			}
		}).error(function(){
			alertWarning("网络错误,请重试");
			btn.button('reset');
		});
	});

	$(".rollbackPlan").click(function(){
		var id = $(this).attr("data-id");
		if(!id){
			return false;
		}
		if(!confirm("确认撤销？将撤回所有已出库的数量")){
			return false;
		}
		var btn = $(this);
		btn.button('loading');
		$.post("{:U('rollbackPlan')}",{id:id},function(msg){
			btn.button('reset');
			if(msg.status){
				alertWarning(msg.info,1);
				window.location.reload();
			}else{
				alertWarning(msg.info);
			}
		}).error(function(){
			alertWarning("网络错误,请重试");
			btn.button('reset');
		});
	});

	$(".closePlan").click(function(){
		var id = $(this).attr("data-id");
		if(!id){
			return false;
		}
		if(!confirm("确认关闭？已出库的数量不变，")){
			return false;
		}
		var btn = $(this);
		btn.button('loading');
		$.post("{:U('closePlan')}",{id:id},function(msg){
			btn.button('reset');
			if(msg.status){
				alertWarning(msg.info,1);
				window.location.reload();
			}else{
				alertWarning(msg.info);
			}
		}).error(function(){
			alertWarning("网络错误,请重试");
			btn.button('reset');
		});
	});
});

</script>