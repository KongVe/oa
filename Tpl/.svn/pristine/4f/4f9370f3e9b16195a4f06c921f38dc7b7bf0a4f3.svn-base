<layout name='Layout/ace_popup' />
    {:W('PageHeader',array('name'=>"导入Wish备用验证码"))}

    <form action="{:U('importTfaSave')}" method="POST" name="editForm" id="editForm" class="well form-horizontal clearfix">
        <input type="hidden" id="ajax" name="ajax" value="1"/>

		<input type="hidden" id="id" name="id" value="{$vo.id}">
		<input type="hidden" id="opmode" name="opmode" value="edit">

        <div class="panel panel-primary">
            <div class="panel panel-heading">
                <span>修改信息</span>
            </div>
            <div class="panel-body">
            	
                <div class="form-group col-sm-12">
                   
                    <label class="text-right col-sm-2" for="str">帐号</label>
                    <div class="col-sm-9">
                        {$vo.order_account} {$vo.show_name}
                    </div>

                </div>


                <div class="form-group col-sm-12">
                   
                    <label class="text-right col-sm-2" for="str">备份验证码 </label>
                    <div class="col-sm-9">
                        <textarea class="form-control" type="text" id="str" name="str" style="height:500px;" placeholder="备份验证码（换行分隔）"></textarea>
                    </div>

                </div>
                
            </div>
        </div>

        <div class="panel-default">
            <div class="form-group text-center">
                <input type="button" data-loading-text="正在保存..." data-reload="1" data-close="1" class="defaultEditFormSubmit btn btn-primary" value="保存" />

                <a class="close_box_button btn btn-danger">取消</a>
            </div>
        </div>
    
    </form>


<script type="text/javascript">
	$("#account_id").select2();

</script>