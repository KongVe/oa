<script type="text/javascript">
	var filter_list = {$filter_list|default=""|json_encode};
	var config_data = {$config_data|default=""|json_encode};
	jQuery(function($){
		$("#id",window.parent.document).find('body').css('overflow','auto');
	//如果有搜索值，默认全选了搜索值
	if($("#q").val() != ''){
		$("#q").focus().select();
	}
	
	// $('#table').css({'overflow':'auto'}).width($('body').width());	

	$(".execSynchOnlineListingPlan").click(function(){
		var id = $("#synch_account_id").val();
		if(!id){
			alertWarning("请选择帐号");
			return false;
		}
		var btn = $(this);
		btn.button('loading');
		$.post("{:U('V2AmazonOnlineListing/execSynchOnlineListingPlan')}",{account_id:id},function(msg){
			btn.button('reset');
			if(msg.status){
				alertWarning(msg.info,1);
			}else{
				alertWarning(msg.info);
			}
		}).error(function(){
			alertWarning("网络错误,请重试");
			btn.button('reset');
		});
	});

	$(".showSynchOnlineListingPlan").click(function(){
		var id = $("#synch_account_id").val();
		if(!id){
			alertWarning("请选择帐号");
			return false;
		}
		var url = "{:U('V2AmazonOnlineListing/showSynchOnlineListingPlan')}?account_id="+id;
		
		showMiddleBox(url);	
		
	});	
})

	function approve(id){
		$("#btn_approve_" + id).attr("disabled","disabled");
		data = {
			id:id
		}
		$.post("{:U('approve')}",data,function(r){
			$("#btn_approve_" + id).attr("disabled",null);
			if(r.status){
				window.location.reload();
			}else{
				alertWarning(r.info);
			}
		})
	}

	function cloneAddReview(id){
		
		if(window.confirm('Confirm?')){
			$("#btn_cloneAddReview_" + id).attr("disabled","disabled");
			data = {
				id:id
			}
			$.post("{:U('cloneAddReview')}",data,function(r){
				$("#btn_cloneAddReview_" + id).attr("disabled",null);
				if(r.status){
					window.location.reload();
				}else{
					alertWarning(r.info);
				}
			})		
		}

	}
	function del(id){
		
		if(window.confirm('Confirm?')){
			$("#btn_del_" + id).attr("disabled","disabled");
			data = {
				id:id
			}
			$.post("{:U('del')}",data,function(r){
				$("#btn_del_" + id).attr("disabled",null);
				if(r.status){
					window.location.reload();
				}else{
					alertWarning(r.info);
				}
			})		
		}

	}


</script>