<script type="text/javascript">
function delTemplate (id) {
	if(confirm("确认删除？")){
		$.post("{:U('save')}",{id:id,opmode:'del'},function(msg){
			if(msg.status){
				window.location.reload();
			}else{
				alertWarning(msg.info);
			}
			
			
		}).error(function(){
			alert("网络错误,请重试");
			window.location.reload();
		});
	}
	
}
</script>