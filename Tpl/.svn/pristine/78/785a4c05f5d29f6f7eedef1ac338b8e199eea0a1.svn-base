<script type="text/javascript">
$(function($){
	$(".synchTicket").click(function(){
		var id = $(this).attr("data-id");
		if(!id){
			return false;
		}
		var btn = $(this);
		btn.button('loading');
		$.post("{:U('synchTicket')}",{id:id},function(msg){
			btn.button('reset');
			$("#synch_result_"+id).html(msg.info);
			if(!msg.status){
				alertWarning(msg.info);
				$("#synch_result_"+id).html(msg.info);
			}
		}).error(function(){
			alertWarning("网络错误,请重试");
			btn.button('reset');
		});
	});
});

</script>