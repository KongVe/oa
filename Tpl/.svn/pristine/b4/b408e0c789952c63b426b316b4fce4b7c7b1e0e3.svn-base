<layout name='Layout/ace_popup' />
    {:W('PageHeader',array('name'=>"编辑承运商运费和重量,请严格按照根据账单输入！"))}

    <form action="{:U('packageFeeSave')}" method="POST" name="editForm" id="editForm" class="well form-horizontal clearfix">
        <input type="hidden" id="ajax" name="ajax" value="1"/>

        <input type="hidden" id="id" name="id" value="{$vo.id}">
        <input type="hidden" id="opmode" name="opmode" value="edit">

        <div class="panel panel-primary">
            <div class="panel panel-heading">
                <span>编辑承运商运费和重量</span>
            </div>
            <div class="panel-body">
                <div class="col-sm-12">
                    
                </div>
                
                <div class="col-sm-12">

                    <div class="form-group">
                        <label class="text-right col-sm-2" for="forwarder_weight">物流方式:</label>
                        <div class="col-sm-6">
                            {$express_type_data.express_show_name}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="text-right col-sm-2" for="forwarder_weight">包裹号:</label>
                        <div class="col-sm-6">
                            {$vo.package_code}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="text-right col-sm-2" for="forwarder_weight">跟踪号:</label>
                        <div class="col-sm-6">
                            {$vo.forwarder_tracking_number}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="text-right col-sm-2" for="forwarder_weight">重量(克): </label>
                        <div class="col-sm-3">
                            <input class="form-control" type="number" id="forwarder_weight" name="forwarder_weight" value="{$vo.forwarder_weight}" placeholder="重量(克)">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="text-right col-sm-2" for="shipping_fee_total">运费(元): </label>
                        <div class="col-sm-3">
                            <input class="form-control" type="number" id="shipping_fee_total" name="shipping_fee_total" value="{$vo.shipping_fee_total}" placeholder="运费(元)">
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="text-right col-sm-2" for="category">项目分类: </label>
                        <div class="col-sm-4">
                            <select name="category" check="require" msg="请选择项目分类">
                                <option value="">请选择项目分类</option>
                                <volist name="category_list" id="category">
                                    <option value="{$category}" <eq name="category" value="$vo.category"> selected="selected"</eq> >{$category|L}</option>
                                </volist>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="text-right col-sm-2" for="currency">运费货币: </label>
                        <div class="col-sm-4">
                            <select name="currency" check="require" msg="请选择运费货币">
                                <option value="CNY">CNY人民币</option>
                            </select>
                        </div>
                    </div>
                    
                    <!--  <div class="form-group">
                        <label class="text-right col-sm-2" for="log_time">记录时间(选填): </label>
                        <div class="col-sm-4">
                            <input class="form-control" type="time" id="log_time" name="log_time" value="{$vo.log_time}" placeholder="记录时间(选填)">
                        </div>
                    </div> -->

                </div>
            </div>
        </div>

        <div class="panel-default">
            <div class="form-group text-center">
                <input type="button" data-loading-text="正在保存..." data-close="1" data-reload="1" class="defaultEditFormSubmit btn btn-primary" value="保存" />
                <a class="close_box_button btn btn-danger">取消</a>
            </div>
        </div>
    
    </form>


<script type="text/javascript">
$(function($){

});
</script>