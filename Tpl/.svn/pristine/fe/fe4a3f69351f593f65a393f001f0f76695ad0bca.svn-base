							<a class="btn btn-warning btn-sm"    onclick="stateRule({$vo.id},1)">禁用</a>
						<else/>
							<a class="btn btn-info btn-sm"    onclick="stateRule({$vo.id},0)">开启</a>
						</eq>

						<a class="btn btn-danger btn-sm"    onclick="delRule({$vo.id},0)">删除</a>
					</div>
