<script type="text/javascript">
$(function(){
		maxHeight = parent.document.documentElement.clientHeight - 50 ;
		height = document.body.clientHeight;
		if(height > maxHeight){
			height = maxHeight;
		}

		parent.$("#middleBoxIframe").css("height",height);

		$(".filter_checkbox").click(function(){
			$("#form_search").submit();
		})
		$(".sort_button").click(function(){
			$("#order").val($(this).attr("name"));
			if($("#sort").val() == "1"){
				$("#sort").val("0");
			}else{
				$("#sort").val("1");
			}		
			$("#form_search").submit();
		});

		 $('[data-toggle="tooltip"]').tooltip()
})

	function closeBox(){
		parent.$("#middleBox").modal("hide");
	}

	function edit(id){
		parent.$("#middleBoxIframe").attr("src","<?php echo U("AmazonSellyoursIssue/edit"); ?>?id=" + id);
		parent.$("#middleBox").modal("show");
	}


</script>