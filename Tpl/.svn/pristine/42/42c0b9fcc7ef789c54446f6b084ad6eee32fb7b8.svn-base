<layout name='Layout/ace_popup' />
{:W('PageHeader',array('name'=>'编辑计划'))}
<div class="operate panel panel-default">
	<div class="panel-body">
	
		
		<div class="action">
			<input type="hidden" name="model_name" value="place"> 
			<input class="btn btn-sm btn-primary" type="button" value="保存" onclick="save();">
			<input  class="btn btn-sm btn-default" type="button" value="取消" onclick="parent.$('#middleBox').modal('hide');">
		</div>
	</div>
</div>

<div class="col-sm-5" id="relateStock"></div>
<div class="col-sm-7">
	<form method='post' id="form_data" class="well form-horizontal">
		<input type="hidden" id="ajax" name="ajax" value="1">
		<notempty name="vo.id">
			<input type="hidden" id="id" name="id" value="{$vo.id}">
			<input type="hidden" id="opmode" name="opmode" value="edit">
		<else/>
			<input type="hidden" id="opmode" name="opmode" value="add">
		</notempty>
		<!-- 暂时没用途，因为要根据sku  和 variation 来做唯一性判断 -->
		<notempty name="Think.request.stock_id">
			<input type="hidden" id="stock_id" name="stock_id" value="{$vo.stock_id}">	
		</notempty>
		
		<input type="hidden" id="add_file" name="add_file" value="{$vo.add_file}">
		

		<table class="table table-bordered">
			<div class="form-group col-xs-12">	
				<label class="col-sm-4 control-label" for="sku">SKU*：</label>	
				<div class="col-sm-8">
					<input class="form-control" value="{$vo.sku}" type="text" id="sku" name="sku" check="require" placeholder="输入sku,区分大小写" msg="请输入SKU">
					<!-- <span class="help-block">多个SKU值时，请使用英文逗号,分开</span> -->
				</div>
			</div>
			<div class="form-group col-xs-12">
				<label class="col-sm-4 control-label" for="variation">规格：</label>
				<div class="col-sm-8">
					<input class="form-control" value="{$vo.variation}" type="text" id="variation" name="variation"   msg="请输入规格 ">
				</div>
			</div>

			<div class="form-group col-xs-12">
				<label class="col-sm-4 control-label" for="quantity">需采数量*：</label>
				<div class="col-sm-8">
					<input class="form-control" value="{$vo.quantity}" type="text" id="quantity" name="quantity" check="require" msg="请输入数量">
				</div>

			</div>

			<div class="form-group col-xs-12">
				<div class="col-sm-4">
					<label class="col-sm-12 control-label" for="thumbnail">图片：</label>
					<div class="col-sm-12">
						<a href="{$vo.thumbnail}" id="thumbnail_show" class="thumbnail" target="_blank" style="width: 80%;position: absolute;z-index:1000;"><img src="{$vo.thumbnail}" /></a>
					</div>
				</div>
			
				<div class="col-sm-8">
					<input class="form-control" value="{$vo.thumbnail}" type="text" id="thumbnail" name="thumbnail" check="require" msg="请输入图片地址" onchange="showThumbnail()">
					<div class="form-group col-xs-12">
						如果图片不正确，请选择参考卖出过的图片和规格<br>
						或直接输入正确的图片地址
					</div>
				</div>
			</div>

			<div class="form-group col-xs-12">
				<label class="col-sm-4 control-label" for="memo">仓库：</label>
				<div class="col-sm-8">
					<div class="col-sm-3">
						<select id="warehouse_select" name="warehouse_id" check="require" msg="请选择仓库" select-data="{$vo.warehouse_id}">
						</select>
					</div>
					
				</div>
			</div>
			<div class="form-group col-xs-12">
				<label class="col-sm-4 control-label" for="memo">备注：</label>
				<div class="col-sm-8">
					<textarea class="form-control" name="memo" id="memo">{$vo.memo}</textarea>
				</div>
			</div>


			<div class="form-group col-xs-12">
				<div class="col-xs-12 pull-right" id="reference">

				</div>	
			</div>
		</table>
	</form>
</div>
<div class="thumbnailBox">
	<a href="#" target="_blank" class="thumbnail"><img src="" /></a>
</div>

